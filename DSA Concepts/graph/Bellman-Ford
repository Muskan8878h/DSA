// User function Template for Java

class Solution {
    public int[] bellmanFord(int V, int[][] edges, int src) {
        // code here
        int[] res=new int[V];
        Arrays.fill(res,(int)1e8);
        res[src]=0;
        for(int i=0;i<V-1;i++){
            for(int e[]:edges){
                int u=e[0];
                int v=e[1];
                int w=e[2];
                if(res[u]!=(int)1e8 && res[u]+w < res[v]){
                    res[v]=res[u]+w;
                }
            }
        }
        for(int e[]:edges){
            int u=e[0];
            int v=e[1];
            int w=e[2];
            if(res[u]!=(int)1e8 && res[u]+w < res[v]){
                return new int[]{-1};
            }
        }
        return res;
    }
}
